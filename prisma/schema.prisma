// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  ddd Int
  tellphone Int
  postalCode Int
  street String
  complement String
  number Int
  district String
  city String
  state String
  password String
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  uptadedAt DateTime @updatedAt @map("uptaded_at")

  @@map("user")
}

model Product {
  id String @id @default(uuid())
  name String @unique
  description String
  price Float
  image String
  createdAt DateTime @default(now()) @map("created_at")
  uptadedAt DateTime @updatedAt @map("uptaded_at")

  @@map("products")
}
